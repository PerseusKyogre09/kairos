# Supabase Configuration
# Get these values from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Database Connection (PostgreSQL URI from Supabase)
# Go to Settings > Database in your Supabase dashboard
# Copy the "Connection string" and replace [YOUR-PASSWORD] with your database password
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# Flask Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.137.224:3000

# Blockchain Configuration (for deployment)
# Choose a testnet: 'sepolia', 'mumbai', or 'polygon'
BLOCKCHAIN_NETWORK=sepolia

# RPC URL - Use Infura, Alchemy, or other provider
# For Sepolia: https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# For Mumbai: https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Infura Project ID (alternative to full RPC URL)
INFURA_PROJECT_ID=your-infura-project-id

# Private key for transaction signing (keep secure!)
BLOCKCHAIN_PRIVATE_KEY=your-private-key-here

# Deployed contract addresses (update with your deployed contracts)
EVENTCONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
PAYMENTPROCESSOR_ADDRESS=0x0000000000000000000000000000000000000000
TICKETNFT_ADDRESS=0x0000000000000000000000000000000000000000

# Application Configuration
BASE_URL=https://your-render-app.onrender.com